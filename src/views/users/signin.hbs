<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Account Login
        </h1>
      </div>
      <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logolab.png" alt="Logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="university">Universidad:</label>
            <select class="form-control" name="university" id="university">
              <option value="">Selecciona una universidad</option>
              <option value="unisucre">Universidad de Sucre (Unisucre)</option>
              <option value="unicuc">Universidad de la Costa (Unicuc)</option>
              <option value="uninorte">Universidad del Norte (Uninorte)</option>
              <option value="udec">Universidad de Córdoba (UdeC)</option>
              <option value="univalle">Universidad del Valle</option>
              <option value="usc">Universidad Santiago de Cali (USC)</option>
              <option value="uniatlantico">Universidad del Atlántico</option>
              <option value="udea">Universidad de Antioquia (UdeA)</option>
              <option value="uninorte">Universidad del Magdalena</option>
              <option value="unimetro">Universidad Metropolitana</option>
              <option value="ces">Corporación Universitaria Empresarial de Salamanca (CES)</option>
            </select>
          </div>
          <div class="form-group">
            <label for="role">Selecciona tu rol:</label>
            <input type="radio" name="role" value="estudiante" checked onchange="toggleUniversityField()"> Estudiante
            <input type="radio" name="role" value="profesor" onchange="toggleUniversityField()"> Profesor
            <input type="radio" name="role" value="administrador" onchange="toggleUniversityField()"> Administrador
          </div>
          <button class="btn btn-primary btn-block">
            Ingresar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>